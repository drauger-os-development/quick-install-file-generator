"""Quick Install File Generator - Entry Point"""
from __future__ import print_function
from sys import stderr, version_info
from sys import argv as ARGV
from subprocess import check_call


def __eprint__(*args, **kwargs):
    """Make it easier for us to print to stderr"""
    print(*args, file=stderr, **kwargs)


VERSION = "0.0.1-alpha0"
HELP = """quick-install-file-generator, Version %s
\t-h, --help\t\tPrint this help dialog and exit
\t-v, --version\t\tPrint current version and exit
Pass nothing to start quick-install-file-generator.""" % (VERSION)

if version_info[0] == 2:
    __eprint__("Please run with Python 3 as Python 2 is End-of-Life.")
    exit(2)

# get length of argv
ARGC = len(ARGV)
try:
    if ((ARGV[1] == "-h") or (ARGV[1] == "--help")):
        print(HELP)
        exit(0)
    elif ((ARGV[1] == "-v") or (ARGV[1] == "--version")):
        print(VERSION)
        exit(0)
    else:
        __eprint__("Option: %s not recognized" % (ARGV[1]))
        check_call(["./quick-install-file-generator", "-h"])
        exit(1)
except IndexError:
    exit(check_call("../share/quick-install-file-generator/main.py"))
